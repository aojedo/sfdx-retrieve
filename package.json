{
	"name": "sfdx-retrieve",
	"publisher": "aojedo",
	"displayName": "SFDX Retrieve",
	"description": "Retrieve Metadata by type using SFDX",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.sfdx-retrieve-classes", 
		"onCommand:extension.sfdx-retrieve-triggers", 
		"onCommand:extension.sfdx-retrieve-lwc", 
		"onCommand:extension.sfdx-retrieve-pages"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.sfdx-retrieve-classes",
				"title": "SFDX Retrieve Apex Classes"
			},
			{
				"command": "extension.sfdx-retrieve-triggers",
				"title": "SFDX Retrieve Apex Triggers"
			},
			{
				"command": "extension.sfdx-retrieve-lwc",
				"title": "SFDX Retrieve LWC"
			},
			{
				"command": "extension.sfdx-retrieve-pages",
				"title": "SFDX Retrieve Visualforce Pages"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
